<?xml version="1.0" encoding="UTF-8"?>
<layout> <!-- Start your layout with this !-->
	<element name="navbar" hname="Navigation Bar" description="Top of the page, ideal for navbars."> <!-- Each 'element' (area for a module) should tagged like so. !-->
		<module>bread-navbar</module> 
		<!-- Module to be placed (name of the module please). 
		     If the module isn't found then the element will 
		     be ignored unless a backup is suggested.!-->
		<backup-module>bread-navbar</backup-module>
		<!-- A backup module to be placed in event of a missing module. Not required by any means
		     but placing a bread core module like 'bread-navbar' would be a smart move.
		!-->
		<dimensions>
			<width>100%</width>
			<height>10%</height>
		<!-- You can use % for standard html percentage styling or a integer for pixel accuracy. !-->
		</dimensions>
		<position>
			<keepto>top</keepto>
			<!-- Stick to the top,bottom,left,right or none. None will be an absolute placement. !-->
			<x>0</x>
			<y>0</y>
			<z>top</z> <!-- Always on top (hehe). Can be a number !-->
			<!-- Coordinate to start from!-->
			<scroll>True</scroll> <!-- Scroll with the browser!-->
		</position>
	</element>
	<element name="contents" hname="Page Contents" description="Middle section where contents will be placed.">
		<module>bread-pagebuilder</module>
		<dimensions>
			<width>80%</width>
			<height>90%</height>
		</dimensions>
		<position>
			<margin>
				<left>10%</left>
				<right>10%</right>
			</margin>
		</position>
	</element>
	<element name="footer" hname="Footer" description="Good place for copyright or author name.">
		<module>bread-rawhtml</module>
		<dimensions>
			<width>100%</width>
			<height>5%</height>
		</dimensions>	
		<position>
			<keepto>bottom</keepto>
		</position>
	</element>
</layout>
