                "description": "Section for recent posts.",
                "module": "BreadPageSystem",
                "event":"BreadPageSystem.DrawRecentPosts",
                "arguments":{
                    "cell_size":2
                }
            },
            {
            "name": "contents",
            "id": "contents",
